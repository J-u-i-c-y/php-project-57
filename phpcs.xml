<?xml version="1.0"?>
<ruleset name="Hexlet Code">
    <description>PHP Code Sniffer configuration for Hexlet Code</description>
    
    <!-- Проверяем только наш код -->
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    
    <!-- Исключаем стандартные файлы Laravel и тесты -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>tests/</exclude-pattern>
    <exclude-pattern>bootstrap/</exclude-pattern>
    <exclude-pattern>storage/</exclude-pattern>
    <exclude-pattern>public/</exclude-pattern>
    <exclude-pattern>config/</exclude-pattern>
    
    <arg name="colors"/>
    <arg value="p"/>
    
    <!-- Используем PSR12 стандарт -->
    <rule ref="PSR12"/>
    
    <!-- Разрешаем несколько traits в одном use -->
    <rule ref="PSR2.Classes.ClassDeclaration">
        <exclude name="PSR2.Classes.ClassDeclaration.CloseBraceAfterBody"/>
    </rule>
</ruleset>