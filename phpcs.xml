<?xml version="1.0"?>
<ruleset name="Hexlet Code">
    <description>PHP Code Sniffer configuration for Hexlet Code</description>
    
    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>resources</file>
    <file>routes</file>
    
    <!-- Исключаем тесты из проверки имен методов -->
    <exclude-pattern>tests/</exclude-pattern>
    
    <arg name="colors"/>
    <arg value="p"/>
    
    <rule ref="PSR12"/>
</ruleset>